<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>12.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- NuGet Package Metadata -->
    <PackageId>Minimact.Charts</PackageId>
    <Version>0.1.0</Version>
    <Authors>Minimact Contributors</Authors>
    <Company>Minimact</Company>
    <Description>Server-side charting library for Minimact with zero client bundle overhead. Includes Bar, Line, Pie, and Area charts with Recharts-inspired API.</Description>
    <PackageTags>minimact;charts;recharts;plotting;visualization;svg;server-side</PackageTags>
    <RepositoryType>git</RepositoryType>
    <Copyright>Â© 2025 Minimact Contributors</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/minimact/minimact</RepositoryUrl>
    <PackageProjectUrl>https://github.com/minimact/minimact</PackageProjectUrl>
    <PackageIcon>logo-rem.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <RootNamespace>Minimact.Charts</RootNamespace>
    <AssemblyName>Minimact.Charts</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Minimact.AspNetCore" Version="0.1.3" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="assets\**\*" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include README in package -->
    <None Include="README.md" Pack="true" PackagePath="\" Condition="Exists('README.md')" />
    <None Include="..\logo-rem.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
