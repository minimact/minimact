{
  "name": "minimact-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Minimact framework and extensions monorepo",
  "scripts": {
    "build": "npm run build:client-runtime && npm run build:extensions && npm run build:babel-plugin",
    "build:client-runtime": "cd src/client-runtime && npm run build",
    "build:extensions": "npm run build:punch && npm run build:dynamic && npm run build:spatial && npm run build:trees && npm run build:query",
    "build:punch": "cd src/minimact-punch && npm run build",
    "build:dynamic": "cd src/minimact-dynamic && npm run build",
    "build:spatial": "cd src/minimact-spatial && npm run build",
    "build:trees": "cd src/minimact-trees && npm run build",
    "build:query": "cd src/minimact-query && npm run build",
    "build:babel-plugin": "cd src/babel-plugin-minimact && npm run build",
    "prebuild": "echo 'Building all Minimact packages...'",
    "postbuild": "echo 'Build complete!'",
    "sync": "node scripts/sync-local-packages.js",
    "sync:watch": "node scripts/sync-local-packages.js --watch",
    "sync:verbose": "node scripts/sync-local-packages.js --verbose",
    "sync:build": "node scripts/sync-local-packages.js --build",
    "dev": "npm run sync:watch",
    "build:dist": "node scripts/build-distribution.js",
    "serve:test": "node tests/test-server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:dynamic": "vitest src/minimact-dynamic",
    "test:punch": "vitest src/minimact-punch",
    "test:quantum": "vitest src/minimact-quantum",
    "test:query": "vitest src/minimact-query",
    "test:spatial": "vitest src/minimact-spatial",
    "test:trees": "vitest src/minimact-trees",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "test:e2e:debug": "npm run build && playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "chokidar": "^3.5.3",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "happy-dom": "^12.10.3",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "ws": "^8.16.0"
  }
}
